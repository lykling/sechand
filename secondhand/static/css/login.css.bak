.footer {
	position: relative;
	top: 5px;
	left: 500px;
	color:#AAAAAA;
	width:400px;
}
.button {
	float: right;
	/* left: 100px; */
	border-top: 1px solid #96d1f8;
	background: #65a9d7;
	opacity: 1;
	background: -webkit-gradient(linear, left top, left bottom, from(#528641), to(#3FA156));
	background: -webkit-linear-gradient(top, #528641, #3FA156);
	background: -moz-linear-gradient(top, #528641, #3FA156);
	background: -ms-linear-gradient(top, #528641, #3FA156);
	background: -o-linear-gradient(top, #528641, #3FA156);
	padding: 5px 10px;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	-webkit-box-shadow: rgba(0,0,0,1) 0 1px 0;
	top: 0px;
	-moz-box-shadow: rgba(0,0,0,1) 0 1px 0;
	box-shadow: rgba(0,0,0,1) 0 1px 0;
	text-shadow: rgba(0,0,0,.4) 0 1px 0;
	color: white;
	font-size: 14px;
	font-family: Helvetica, Arial, Sans-Serif;
	text-decoration: none;
	vertical-align: middle;
}
.button:hover {
	border-top-color: #287a59;
	background: #287a59;
	color: #ccc;
}
.button:active {
	border-top-color: #1b5e43;
	background: #1b5e43;
}
.basic-input {
	border-radius: 5px;
	font-size: 14px;
	/*  color: #0000ff;  */
	color:black;
	height: 18px;
	width:200px;
	padding:5px;
	vertical-align:middle;
	border:1px solid #C9C9C9;
}
label{ 
	display:inline-block; 
	float:left; 
	margin-right:15px; 
	text-align:right; 
	width:60px; 
	font-size:14px; 
	line-height:30px; 
	vertical-align:baseline; 
} 
a:link {
	 text-decoration: none;
}
a:hover {
	text-decoration: none;
}
a:active {
	text-decoration: none;
}
a:visited {
	color: #009977;
	text-decoration: none;
}
